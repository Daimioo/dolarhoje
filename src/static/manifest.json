{
  "manifest_version": 2,
  "name": "Dólar Hoje",
  "version": "1.2",
  "description": "Mostra o dólar do dia atual e o seu valor nos ultimos 15 dias",
  "icons": {
    "16": "icons/dolarhoje16.png",
	  "32": "icons/dolarhoje32.png",
	  "48": "icons/dolarhoje48.png",
	  "64": "icons/dolarhoje64.png",
	  "128": "icons/dolarhoje128.png"
  },
  
  "browser_action": {
    "default_icon": {
      "32": "icons/dolarhoje32.png",
      "64": "icons/dolarhoje64.png"
    },
    "default_title": "Dólar Hoje",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["build.js"]
  }
}
